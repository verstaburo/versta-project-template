mixin form()
  +b.FORM.form&attributes(attributes)
    block

mixin inputbox()
  +b.inputbox&attributes(attributes)
    block

mixin label()
  +e.P.label&attributes(attributes)
    block

mixin input-wrapper()
  +e.wrapper&attributes(attributes)
    block

mixin input()
  +b.INPUT.input&attributes(attributes)

mixin input-number()
  +b.input-numberbox
    +e.SPAN.button.js-numberbox-minus -
    +input.__input.js-numberbox-input&attributes(attributes)
    +e.SPAN.button.js-numberbox-plus +

mixin textarea()
  +b.TEXTAREA.textarea&attributes(attributes)
    block

mixin select()
  +b.SELECT.select&attributes(attributes).js-select
    block

mixin checkradio(data)
  +b.LABEL.checkradio&attributes(attributes)
    +e.INPUT.input(name=(data.name || Math.floor(Math.random()*90000) + 10000), value=(data.value || Math.floor(Math.random()*90000) + 10000), checked=(data.checked || false), type=(data.type || 'checkbox'), required=(data.required || false))
    +e.DIV.block
      +e.SPAN.box
      +e.SPAN.content
        block

mixin range()
  +b.range&attributes(attributes).js-range
    +e.slider.js-range-slider
    +e.numbers
      span.js-range-from
      span.js-range-to

include ui-kit-form
