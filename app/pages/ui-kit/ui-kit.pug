            +inputbox()
              +input()(placeholder="+7 (___) ___-__-__" data-type="tel")
          +col(6)
            +ui-description Поле ввода e-mail.<br> Маска определяется через атрибут data-type="email"
            +inputbox()
              +input()(placeholder="E-mail" data-type="email")
